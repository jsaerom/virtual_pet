<h1>$pet.getName() <a href="/"><i class="fa fa-bolt" aria-hidden="true"></i></a></h1>

<div class="row">
  <div class="col-lg-6 col-lg-offset-3">

    <form action="/pets/$pet.getId()" method="post">
      <input type="text" name="petname" id="petname" value="$pet.getName()"><br>

      <button type="submit" class="btn btn-default">Update Pet Name</button>
    </form>
    <a href="/sleep/pets/$pet.getId()"><button class="btn btn-primary">Sleep</button></a>
    <a href="/feed/pets/$pet.getId()"><button class="btn btn-warning">Feed</button></a>
    <a href="/play/pets/$pet.getId()"><button class="btn btn-danger">Play</button></a>
    #if($msg)
    <br>
    <strong><a href="/players/$pet.getPlayerId()">$msg</a></strong>
    #end

    <h2>A $pet.getPetType() pet owned by: <a href="/players/$player.getId()">$player.getName()</a></h2>
    <h2>Birthday: $pet.getBirthday()</h2>



    <h2>Food level: $pet.getFoodLevel()</h2>
    <h2>Sleep level: $pet.getSleepLevel()</h2>
    <h2>Play level: $pet.getPlayLevel()</h2>
